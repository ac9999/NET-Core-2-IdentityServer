
<div class="jumbotron">
    @if (User.Identity.IsAuthenticated)
    {
        <h1>Hello @User.Identity.Name!</h1>

    }
    else
    {
        <h1>Please sign in</h1>

    }
</div>

@if (User.Identity.IsAuthenticated)
{ 
    <p class="lead">Here are your claims</p>
    <ul>
        @foreach (var claim in User.Claims)
        {
            <li>
                <em>@claim.Type</em>: @claim.Value
            </li>
        }
    </ul>
}
